<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookclub">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_bookclub"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_bookclub"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookClub"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".HomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".CommentsActivity"
            android:exported="false"
            android:label="@string/title_activity_comments"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".DirectMessagingActivity"
            android:exported="false"
            android:label="@string/title_activity_direct_messaging"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".BlogpostActivity"
            android:exported="false"
            android:label="@string/title_activity_blogpost"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".LocationActivity"
            android:exported="false"
            android:label="@string/title_activity_location"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".MessagingActivity"
            android:exported="false"
            android:label="@string/title_activity_messaging"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".BookDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_book_detail"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.BookClub.NoActionBar" />
        <activity
            android:name=".FavoritesActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>